{% doc %}
  @prompt
    add a marquee with continuous scrolling effect written with ---USE CODE AUTHOR10 FLAT 10% OFF---
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    position: relative;
    z-index: 10;
  }

  .ai-marquee-track-{{ ai_gen_id }} {
    display: flex;
    width: max-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .ai-marquee-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    padding: 0 {{ block.settings.item_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .ai-marquee-separator-{{ ai_gen_id }} {
    margin: 0 {{ block.settings.separator_spacing }}px;
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.font_size }}px;
    opacity: 0.7;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-track-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }

    .ai-marquee-separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<marquee-scroll-{{ ai_gen_id }}
  class="ai-marquee-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-marquee-track-{{ ai_gen_id }}">
    <div class="ai-marquee-content-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        <div class="ai-marquee-item-{{ ai_gen_id }}">
          {{ block.settings.marquee_text }}
        </div>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">
          {{ block.settings.separator }}
        </span>
      {% endfor %}
    </div>
    <div class="ai-marquee-content-{{ ai_gen_id }}" aria-hidden="true">
      {% for i in (1..10) %}
        <div class="ai-marquee-item-{{ ai_gen_id }}">
          {{ block.settings.marquee_text }}
        </div>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">
          {{ block.settings.separator }}
        </span>
      {% endfor %}
    </div>
  </div>
</marquee-scroll-{{ ai_gen_id }}>

<script>
  (function() {
    class MarqueeScroll{{ ai_gen_id }} extends HTMLElement {
      connectedCallback() {
        this.track = this.querySelector('.ai-marquee-track-{{ ai_gen_id }}');
      }
    }
    customElements.define('marquee-scroll-{{ ai_gen_id }}', MarqueeScroll{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Marquee scroll",
  "settings": [
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee text",
      "default": "USE CODE AUTHOR10 FLAT 10% OFF"
    },
    {
      "type": "text",
      "id": "separator",
      "label": "Separator",
      "default": "---"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#020912"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "600"
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 8,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Vertical padding",
      "default": 16
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 20,
      "max": 120,
      "step": 10,
      "unit": "s",
      "label": "Scroll speed (bigger = slower)",
      "default": 60
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on hover",
      "default": true
    },
    {
      "type": "range",
      "id": "item_spacing",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Item spacing",
      "default": 30
    },
    {
      "type": "range",
      "id": "separator_spacing",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Separator spacing",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Marquee scroll (Slow & Smooth)"
    }
  ]
}
{% endschema %}
